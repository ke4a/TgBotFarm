@using Microsoft.Extensions.Options
@using BotFarm.Core.Models

@inject IEnumerable<IOptions<BotConfig>> botConfigs

@functions {
    async Task DashboardLinks()
    {
        foreach (var bot in botConfigs)
        {
            <li class="nav-item">
                <a class="nav-link " href="/@bot.Value.Name/dashboard">@bot.Value.Emoji @bot.Value.Name</a>
            </li>
        }
    }
}

@{
    var logo = ViewData["Logo"] ?? "logo.png";
    var footer = ViewData["Footer"] ?? "Do Telegram bots dream of premium users?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/img/fav.png">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/quill/quill.snow.min.css">
</head>
<body class="py-4 d-flex flex-column min-vh-100">
    <header>
        <div class="container">
            <nav id="main-navigation" class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div id="nav_header_text" class="me-3">
                    <img src="~/img/@logo" class="rounded-circle" width="48" height="48" alt="logo">
                </div>
                <button id="navbar_toggler" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="home_link" class="nav-link " href="/">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="/dashboard">🎛️ Dashboard</a>
                        </li>
                        @{ await DashboardLinks(); }
                        <li class="nav-item">
                            <a class="nav-link " href="/health-ui">🩺 Health</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
            <div id="toast-container" aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3"></div>
        </div>
    </main>

    <footer class="footer text-muted mt-auto">
        <div class="container border-top">
            <span>@footer</span>
        </div>
    </footer>

    <!-- Confirm Modal -->
    <div class="modal fade" id="confirmModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">TITLE</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span>MESSAGE</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="action" type="button" data-bs-dismiss="modal" class="btn btn-danger">ACTION</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Message Modal -->
    <div class="modal fade" id="messageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">TITLE</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span>MESSAGE</span>
                    <div id="toolbar-container">
                        <button class="ql-bold"></button>
                        <button class="ql-italic"></button>
                        <button class="ql-underline"></button>
                        <button class="ql-strike"></button>
                        <button class="ql-link"></button>
                        <button id="spoiler-button" type="button">
                            <svg class="bi bi-bricks" viewBox="0 0 16 16">
                                <path d="M0 .5A.5.5 0 0 1 .5 0h15a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5H14v2h1.5a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5H14v2h1.5a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-3a.5.5 0 0 1 .5-.5H2v-2H.5a.5.5 0 0 1-.5-.5v-3A.5.5 0 0 1 .5 6H2V4H.5a.5.5 0 0 1-.5-.5zM3 4v2h4.5V4zm5.5 0v2H13V4zM3 10v2h4.5v-2zm5.5 0v2H13v-2zM1 1v2h3.5V1zm4.5 0v2h5V1zm6 0v2H15V1zM1 7v2h3.5V7zm4.5 0v2h5V7zm6 0v2H15V7zM1 13v2h3.5v-2zm4.5 0v2h5v-2zm6 0v2H15v-2z" />
                            </svg>
                        </button>
                    </div>
                    <div id="editor"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="action" type="button" data-bs-dismiss="modal" class="btn btn-primary">ACTION</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/quill/quill.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
